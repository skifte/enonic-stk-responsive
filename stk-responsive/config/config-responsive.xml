<config>
    <parameters>
        <parameter path="/" name="meta-generator">Enonic CMS</parameter>
        <parameter path="/" name="meta-author">Enonic</parameter>
        <parameter path="/" name="meta-favicon">/_public/stk-responsive/images/favicon.ico</parameter>  
        <parameter path="/" name="site-admin-name"></parameter>
        <parameter path="/" name="site-admin-email"></parameter>
        
        <parameter path="/" name="google-analytics-web-property-id">UA-1492113-1</parameter>
        <parameter path="/" name="google-analytics-domain-name">skifte.com</parameter>       
        <parameter path="/" name="google-site-verification"></parameter>
        
        <parameter path="/" name="sitemap">/sitemap</parameter>
        <parameter path="/en" name="rss">/en/rss</parameter>
        <parameter path="/no" name="rss">/no/rss</parameter>
    </parameters>
        <image>
            <!-- "Device agnostic" default settings for images.-->
            <format>jpeg</format>
            <quality>80</quality>
            <filters>
                <filter>rounded(4)</filter>
            </filters>
            <sizes>
                <size name="full">
                    <filter>scalewidth</filter>
                    <width>1</width>
                </size>
                <size name="wide">
                    <filter>scalewide</filter>
                    <width>1</width>
                    <height>0.4</height>
                </size>
                <size name="regular">
                    <filter>scalewidth</filter>
                    <width>0.4</width>
                </size>
                <size name="list">
                    <filter>scalewidth</filter>
                    <width>0.3</width>
                </size>
                <size name="square">
                    <filter>scalesquare</filter>
                    <size>0.4</size>
                </size>
                <size name="thumbnail">
                    <filter>scalesquare</filter>
                    <size>0.1</size>
                </size>
            </sizes>
        </image>
        <device-classes>
            <device-class name="desktop,unknown">
                <gridsystem width="1170">
                    <columns>12</columns>
                    <columnwidth>70</columnwidth>
                    <gutterwidth>30</gutterwidth>
                </gridsystem>
                <layout>
                    <area>
                        <region name="region-north"/>
                    </area>
                    <area dynamic="true">
                        <region name="region-west"/>
                        <region name="region-center"/>
                        <region name="region-east"/>
                    </area>
                    <area>
                        <region name="region-south"/>
                    </area>
                </layout>
            </device-class>
            <device-class name="tablet">
                <gridsystem width="1024">
                    <columns>12</columns>
                    <columnwidth>67</columnwidth>
                    <gutterwidth>20</gutterwidth>
                </gridsystem>
                <layout>
                    <area>
                        <region name="region-north"/>
                    </area>
                    <area dynamic="true">
                        <region name="region-west"/>
                        <region name="region-center"/>
                        <region name="region-east"/>
                    </area>
                    <area>
                        <region name="region-south"/>
                    </area>
                </layout>
            </device-class>
            <device-class name="mobile">
                <gridsystem width="480">
                    <columns>1</columns>
                    <columnwidth>480</columnwidth>
                    <gutterwidth>0</gutterwidth>
                </gridsystem>
                <layout>
                    <area>
                        <region name="region-north"/>
                    </area>
                    <area>
                        <region name="region-west"/>
                        <region name="region-center"/>
                        <region name="region-east"/>
                    </area>
                    <area>
                        <region name="region-south"/>
                    </area>
                </layout>
                <image>
                    <quality>70</quality>
                </image>
            </device-class>
        </device-classes>
</config>